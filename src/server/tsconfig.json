{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../public",
    "rootDir": "../"
  },
  "include": [
    "./**/*.ts",
    "../shared/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}