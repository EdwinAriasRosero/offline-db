{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
  ],
  "exclude": [
    "node_modules"
  ]
}